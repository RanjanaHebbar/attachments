<mvc:View xmlns:core="sap.ui.core" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:upload="sap.m.upload"
xmlns:macros="sap.fe.macros"
xmlns:html="http://www.w3.org/1999/xhtml" 
controllerName="attachmentapp.ext.main.Main">


    <App id="app">
		<pages>
			<Page
				id="page"
				title="{i18n>Attachment}"
			>
				<upload:UploadSet
					id="uploadSet"
					instantUpload="false"
					showIcons="true"
					uploadEnabled="true"
					dragDropConfig="null"
					afterItemAdded="onAfterItemAdded"
					uploadCompleted="onUploadCompleted"				
					items="{
								path: '/Files',
								parameters: {
									$orderby: 'createdAt desc'
								},
								templateShareable: false}"
				>
				<upload:toolbar>
				    <OverflowToolbar id="12345">
					   <ToolbarSpacer id="3456"/>
					    <Button
							id="downloadSelectedButton"
							text="Download selected"
							press="onDownloadSelectedButton"/>
					    <upload:UploadSetToolbarPlaceholder id="uptoolplacehold"/>
				   </OverflowToolbar>
			    </upload:toolbar>
				<upload:items>
						<upload:UploadSetItem id="item1"
							fileName="{fileName}"
							mediaType="{mediaType}"
							url="{url}"
							enabledEdit="true"
							visibleEdit="true"
							enabledRemove="true"
					
							openPressed="onOpenPressed"
						>
							<upload:attributes>
								<ObjectAttribute id="item2"
									title="Uploaded By"
									text="{createdBy}"
									active="false"
								/>
								<ObjectAttribute id="item3"
									title="Uploaded on"
									text="{createdAt}"
									active="false"
								/>
								<ObjectAttribute id="item4"
									title="File Size"
									text="{size}"
									active="false"
								/>
							</upload:attributes>
						</upload:UploadSetItem>
					</upload:items>
				</upload:UploadSet>
			</Page>			
		</pages>
	</App>
</mvc:View>